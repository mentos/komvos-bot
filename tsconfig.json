{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./built",
    "rootDir": "./src",
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/",
  ]
}